generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Placeholder model for connection testing - will be replaced with real models in Story 2.1
model ConnectionTest {
  id        String   @id @default(uuid())
  testValue String   @map("test_value")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("connection_test")
}
