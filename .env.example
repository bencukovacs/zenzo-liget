# ===========================================
# ZENZO-LIGET ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local for local development
# NEVER commit .env.local to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Default database URL (used for migrations and default tenant)
DATABASE_URL="postgresql://user:password@localhost:5432/zenzo_default"

# Multi-tenant database URL template
# The {tenant_id} placeholder will be replaced with the actual tenant ID
# Example: For tenant "liget", the URL becomes postgresql://user:password@localhost:5432/liget_db
TENANT_DB_URL_TEMPLATE="postgresql://user:password@localhost:5432/{tenant_id}_db"

# ===========================================
# AUTHENTICATION (NextAuth.js v5)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl"

# ===========================================
# EMAIL SERVICE (Resend) - Configure later
# ===========================================
RESEND_API_KEY=""
